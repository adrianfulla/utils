FROM php:7.2

RUN apt-get update && apt-get install -y mariadb-client libxml2-dev zlib1g-dev \
    && docker-php-ext-install pdo_mysql pcntl posix soap simplexml zip \
    && docker-php-ext-configure pcntl --enable-pcntl

COPY dockerfiles/horizon/horizon.sh /opt/bin/entrypoint.sh
RUN chmod +x /opt/bin/entrypoint.sh

CMD ["/opt/bin/entrypoint.sh"]

WORKDIR /var/www
